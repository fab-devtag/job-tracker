generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String   @id @default(uuid()) //Moins prévisible que id
  email          String   @unique //Unicité des comptes
  name           String?
  hashedPassword String
  createdAt      DateTime @default(now()) //Historique des actions
  updatedAt      DateTime @updatedAt
  Jobs           Job[]
}

model Job {
  id           String    @id @default(uuid())
  title        String
  company      String
  link         String
  status       JobStatus
  salary       String
  localisation String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  notes        String
  user         User      @relation(fields: [userId], references: [id])
  userId       String
}

enum JobStatus {
  WISHLIST
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
}
